@model IEnumerable<DigitalShoppingTakkala.Models.Product>

@{
    ViewData["Title"] = "جست و جوی محصولات";
}
<html>
<head>

    <style>


    </style>

    <script>


    </script>
</head>
<body>

    

    <div class="col-md-12 bg-light container">
       
        <div>
            <h5 style="text-align:center;font-family:IRANYekan,sans-serif;height:40px;border:1px solid gold;background-color:gold;padding-top:5px;opacity:0.8;" >: نتایج جست وجو </h5>
        </div>
        <div class="row" style="padding-top:20px;" dir="rtl">
            @foreach (var item in Model)
            {

                <div class="col-md-3" style="float:right;font-family:IRANYekan,sans-serif; padding-top:10px;">
                    <div class="card mb-4 shadow-sm" dir="rtl">
                        <a asp-controller="Product" asp-action="GetProductByid" asp-route-id="@item.ProductId">
                            <img src="~/Images/@item.ImageName" width="100%" height="225" style="padding:7px 7px 7px 7px;" />
                        </a>
                        <div class="card-body">

                            <p class="card-text" style="text-align:right;">@item.ProductName</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <small class="text-dark" style="font-weight:bolder;font-family:'B Mitra';">@item.Price2.ToString("#,0") تومان</small>

                                <div class="btn-group">
                                    <a asp-controller="Order" asp-action="AddtoCard" asp-route-id="@item.ProductId" class="btn btn-sm btn-outline-danger">+ به سبد خرید</a>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
                

            }
           

    </div>
        </div>

</body>
</html>

@using PagedList.Core.Mvc;
@using PagedList;
@model IEnumerable<Product>
@{
    ViewData["Title"] = "محصولات";
}
<html>
<head>

    <style>
        

        #panel1 a {
            font-family: 'B Yekan';
            padding-top: -3px;
            background-color: rgb(153, 235, 255);
        }
        .filtering ul li{
            display:inline-block;
        }

        #choice {
            margin: 10px 5px 10px 5px;
            width: 100%;
            height: auto;
        }

        input {
            margin-bottom: 8px;
            margin-left: 5px;
        }
        h6{
            font-family:IRANYekan,sans-serif;
        }
        #choice ul li a {
            color: black;
            text-decoration-style: none;
            text-decoration: none;
            text-decoration-line: none;
            text-decoration-color: none;
        }
        #choice ul li a:hover {
            color:purple;
            
            opacity:1;
        }
          #choice ul li:hover {
            color:purple;
            
            opacity:1;
        }

        ul li a {
            text-decoration-style: none;
            text-decoration: none;
            text-decoration-line: none;
            text-decoration-color: none;
            opacity: 0.8;
            color: black;
            text-decoration: none;
        }
    </style>

    <script>
       

    </script>
</head>
<body>

    <div class="col-md-3 bg-light" dir="rtl" style="float:right; width:20%;">
        <div dir="rtl" style="text-align:right;">

        </div>
        <div id="choice" dir="rtl" style="font-family:'B Yekan';height:auto;width:100%;">
            <div>
                <div>
                    <h6 style="text-align:center;" class="btn btn-block btn-info">جست و جو براساس قیمت</h6>
                </div>

                @*create price filtering*@
                <div id="pricefilter" dir="rtl" style="text-align:right;">
                    <ul>
                        <li>
                            <a href="@Url.Action("GetAllBySGID","Product",new { choiceprice="1"})">کمتر از 1 میلیون تومان</a>
                        </li>
                        <li>
                            <a href="@Url.Action("GetAllBySGID","Product",new { choiceprice="2"})">بین 1 تا 5 میلیون تومان</a>
                        </li>
                        <li>
                            <a href="@Url.Action("GetAllBySGID","Product",new { choiceprice="3"})">بین 5 تا 10 میلیون تومان</a>
                        </li>
                        <li>
                            <a href="@Url.Action("GetAllBySGID","Product",new { choiceprice="4"})">بین 10 تا 20 میلیون تومان</a>
                        </li>
                        <li>
                            <a href="@Url.Action("GetAllBySGID","Product",new { choiceprice="5"})">بیشتر از 20 میلیون تومان</a>
                        </li>
                    </ul>

                </div>
            </div>
        </div>

        @*create brand filtering*@



        <div id="choice" dir="rtl" style="font-family:'B Yekan';height:auto;width:100%;">
            <div>
                <div>
                    <h6 style="text-align:center;" class="btn btn-block btn-info">جست و جو براساس برند</h6>
                </div>


                <div id="pricefilter" dir="rtl" style="text-align:right;">
                    <ul>
                        <li>
                            <a href="@Url.Action("GetAllBySGID","Product",new { choicebrand=1})">اپل</a>
                        </li>
                        <li>
                            <a href="@Url.Action("GetAllBySGID","Product",new { choicebrand=2})">سامسونگ</a>
                        </li>
                        <li>
                            <a href="@Url.Action("GetAllBySGID","Product",new { choicebrand=3})">سونی</a>
                        </li>
                        <li>
                            <a href="@Url.Action("GetAllBySGID","Product",new { choicebrand=4})">هواوی</a>
                        </li>
                        <li>
                            <a href="@Url.Action("GetAllBySGID","Product",new { choicebrand=11})">ایسوس</a>
                        </li>
                        <li>
                            <a href="@Url.Action("GetAllBySGID","Product",new { choicebrand=15})">گوگل</a>
                        </li>
                        <li>
                            <a href="@Url.Action("GetAllBySGID","Product",new { choicebrand=6})">دل</a>
                        </li>
                        <li>
                            <a href="@Url.Action("GetAllBySGID","Product",new { choicebrand=5})">اچ پی</a>
                        </li>
                        <li>
                            <a href="@Url.Action("GetAllBySGID","Product",new { choicebrand=7})">شیایومی</a>
                        </li>
                        <li>
                            <a href="@Url.Action("GetAllBySGID","Product",new { choicebrand=12})">لنوو</a>
                        </li>
                        <li>
                            <a href="@Url.Action("GetAllBySGID","Product",new { choicebrand=9})">ال جی</a>
                        </li>
                        <li>
                            <a href="@Url.Action("GetAllBySGID","Product",new { choicebrand=18})">سایر برندها</a>
                        </li>
                    </ul>

                </div>
            </div>
        </div>

        @*create introduction year filter*@
        <div id="choice" dir="rtl" style="font-family:'B Yekan';height:auto;width:100%;">
            <div>
                <div>
                    <h6 style="text-align:center;" class="btn btn-block btn-info">جست و جو براساس سال عرضه</h6>
                </div>


                <div id="pricefilter" dir="rtl" style="text-align:right;">
                    <ul>
                        <li>
                            <a href="@Url.Action("GetAllBySGID","Product",new { choiceyear=2020})">2020</a>
                        </li>
                        <li>
                            <a href="@Url.Action("GetAllBySGID","Product",new { choiceyear=2019})">2019</a>
                        </li>
                        <li>
                            <a href="@Url.Action("GetAllBySGID","Product",new { choiceyear=2018})">2018</a>
                        </li>
                        <li>
                            <a href="@Url.Action("GetAllBySGID","Product",new { choiceyear=2017})">2017</a>
                        </li>
                        <li>
                            <a href="@Url.Action("GetAllBySGID","Product",new { choiceyear=2016})">2016</a>
                        </li>
                        <li>
                            <a href="@Url.Action("GetAllBySGID","Product",new { choiceyear=2015})">2015 و ماقبل آن </a>
                        </li>

                    </ul>

                </div>
            </div>
        </div>

    </div>

    <div class="col-md-9 bg-light">
        <p  style="text-align:right;padding-top:18px;font-family:IRANYekan,sans-serif;">: مرتب سازی بر اساس </p>
        <div class="filtering" >

            <ul dir="rtl" style="text-align:right;padding-bottom:15px;margin-top:-43px;margin-right:130px;font-family:IRANYekan,sans-serif;">
                <li>
                    <a class="btn btn-sm  btn-outline-primary " href="@Url.Action("GetAllBySGID","Product",new { sorting="1"})">جدیدترین</a>
                </li>
                <li>
                    <a class="btn btn-sm  btn-outline-primary" href="@Url.Action("GetAllBySGID","Product",new { sorting="2"})">پرفروش ترین</a>
                </li>
                <li>
                    <a class="btn btn-sm  btn-outline-primary" href="@Url.Action("GetAllBySGID","Product",new { sorting="4"})">گران ترین</a>
                </li>
                <li>
                    <a class="btn btn-sm   btn-outline-primary" href="@Url.Action("GetAllBySGID","Product",new { sorting="5"})">ارزان ترین</a>
                </li>
            </ul>


        </div>
        <div class="row" style="padding-top:20px;" dir="rtl">
            @foreach (var item in Model)
            {

                <div class="col-md-3" style="float:right;font-family:IRANYekan,sans-serif; padding-top:10px;">
                    <div class="card mb-4 shadow-sm" dir="rtl">
                        <a asp-controller="Product" asp-action="GetProductByid" asp-route-id="@item.ProductId">
                            <img src="~/Images/@item.ImageName" width="100%" height="225" style="padding:7px 7px 7px 7px;" />
                        </a>
                        <div class="card-body">

                            <p class="card-text" style="text-align:right;">@item.ProductName</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <small class="text-dark" style="font-weight:bolder;font-family:'B Mitra';">@item.Price2.ToString("#,0") تومان</small>

                                <div class="btn-group">
                                    <a asp-controller="Order" asp-action="AddtoCard" asp-route-id="@item.ProductId" class="btn btn-sm btn-outline-danger">+ به سبد خرید</a>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>

            }
            <pager class="pager-container" list="@Model" options="@PagedListRenderOptions.TwitterBootstrapPager" asp-action="GetAllBySGID" asp-controller="Product" />
        </div>

    </div>

</body>
</html>

@using System.Security.Claims
@model IEnumerable<Product>

@{
    ViewData["Title"] = "Home Page";
}
    <div class="bg-light">
        <div class="container">
            <div id="demo" class="carousel slide" data-ride="carousel">

                <!-- Indicators -->
                <ul class="carousel-indicators">
                    <li data-target="#demo" data-slide-to="0" class="active"></li>
                    <li data-target="#demo" data-slide-to="1"></li>
                    <li data-target="#demo" data-slide-to="2"></li>
                    <li data-target="#demo" data-slide-to="3"></li>
                    <li data-target="#demo" data-slide-to="4"></li>
                </ul>

                <!-- The slideshow -->
                <div class="carousel-inner">
                    <div class="carousel-item">
                        <a href="#"><img src="~/Images/Slides/1.jpg" style="width:100%;" /></a>
                    </div>
                    <div class="carousel-item">
                        <a href="#"><img src="~/Images/Slides/2.jpg" style="width:100%;" /></a>
                    </div>
                    <div class="carousel-item active">
                        <a href="#"><img src="~/Images/Slides/3.jpg" style="width:100%;" /></a>
                    </div>
                    <div class="carousel-item">
                        <a href="#"><img src="~/Images/Slides/4.jpg" style="width:100%;" /></a>
                    </div>
                    <div class="carousel-item">
                        <a href="#"><img src="~/Images/Slides/5.jpg" style="width:100%;" /></a>
                    </div>
                </div>

                <!-- Left and right controls -->
                <a class="carousel-control-prev" href="#demo" data-slide="prev">
                    <span class="carousel-control-prev-icon"></span>
                </a>
                <a class="carousel-control-next" href="#demo" data-slide="next">
                    <span class="carousel-control-next-icon"></span>
                </a>

            </div>
        </div>
    </div>
    <div class="bg-light" style="margin-top:5%; width:100%;height:auto;">
        <div >

            <h4 style="margin-top:10px;padding-top:15px;padding-right:10%;text-align:right;font-family:IRANYekan,sans-serif;padding-bottom:30px;">جدیدترین محصولات در تک کالا</h4>



            <div class="container" dir="rtl" >
                <div class="row">
                    @foreach (var item in Model)
                    {
                    <div class="col-md-3" style="float:right;font-family:IRANYekan,sans-serif;" dir="rtl">
                        <div class="card mb-4 shadow-sm">
                            <img src="~/Images/@item.ImageName" width="100%" height="225" />
                            <div class="card-body">
                                <p class="card-text" style="text-align:right;">@item.ProductName</p>
                                <div class="d-flex justify-content-between align-items-center">
                                    <small class="text-muted text-dark"  style="font-weight:bolder;">@item.Price تومان</small>
                                    <div class="btn-group">
                                        <a href="#" class="btn btn-sm btn-outline-danger">+ به سبد خرید</a>
                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>
                    }

                </div>


            </div>
    </div>
@model IEnumerable<Product>

@{
    ViewData["Title"] = "Home Page";
}
    <div class="container">
        <div id="demo" class="carousel slide" data-ride="carousel">

            <!-- Indicators -->
            <ul class="carousel-indicators">
                <li data-target="#demo" data-slide-to="0" class="active"></li>
                <li data-target="#demo" data-slide-to="1"></li>
                <li data-target="#demo" data-slide-to="2"></li>
                <li data-target="#demo" data-slide-to="3"></li>
                <li data-target="#demo" data-slide-to="4"></li>
            </ul>

            <!-- The slideshow -->
            <div class="carousel-inner">
                <div class="carousel-item">
                    <a href="#"><img src="~/Images/Slides/1.jpg"  style="width:100%;" /></a>
                </div>
                <div class="carousel-item">
                    <a href="#"><img src="~/Images/Slides/2.jpg" style="width:100%;" /></a>
                </div>
                <div class="carousel-item active">
                    <a href="#"><img src="~/Images/Slides/3.jpg" style="width:100%;" /></a>
                </div>
                <div class="carousel-item">
                    <a href="#"><img src="~/Images/Slides/4.jpg" style="width:100%;" /></a>
                </div>
                <div class="carousel-item">
                    <a href="#"><img src="~/Images/Slides/5.jpg" style="width:100%;" /></a>
                </div>
            </div>

            <!-- Left and right controls -->
            <a class="carousel-control-prev" href="#demo" data-slide="prev">
                <span class="carousel-control-prev-icon"></span>
            </a>
            <a class="carousel-control-next" href="#demo" data-slide="next">
                <span class="carousel-control-next-icon"></span>
            </a>

        </div>
    </div>
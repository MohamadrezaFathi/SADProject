@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "فراموشی رمز عبور";
}
    <html>
    <head>
        <style>
            body{
                font-family:IRANYekan,sans-serif;
            }
            #loginpanel2 {
                width: 35%;
                height: 400px;
                margin-left: 30%;
                background-color: lavender;
            }

            .row {
                text-align: center;
                font-family: IRANYekan,sans-serif;
            }

            h4 {
                font-family: IRANYekan,sans-serif;
                text-align: center;
                padding-top: 13px;
            }

            #ppp1 {
                border-bottom: 2px solid white;
            }

            .brandname {
                padding-bottom: 30px;
            }
            
            button{
                margin-right:35%;
            }

            button:hover {
                transform: scale(1.1);
            }

            #branding:hover {
                transform: scale(1.5);
            }
        </style>
    </head>
    <body>
        <div class="brandname" style="text-align:center;">
            <h4>فروشگاه اینترنتی لوازم دیجیتال<big> <a id="branding2" asp-controller="Home" asp-action="Index" style="color:red;opacity:0.7;text-decoration:none;">تک کالا</a></big></h4>

        </div>
        
      
        <hr />
        <div class="row container" id="loginpanel2" dir="rtl">
        
            <div class="col-md-12" style="float:right;text-align:right;">
                
                <form method="post">
                    <h4>فراموشی رمز عبور</h4>
                    <br />
                    <p id="ppp1"></p>
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Input.Email"> ایمیل خود را وارد کنید</label>
                        <input asp-for="Input.Email" class="form-control" />
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <button type="submit" class="btn btn-primary">ارسال به ایمیل</button>
                </form>
            </div>
        </div>

        @section Scripts {
            <partial name="_ValidationScriptsPartial" />
        }

    </body>
</html>

       
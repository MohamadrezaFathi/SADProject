@page
@model PersonalDataModel
@{
    ViewData["Title"] = "اطلاعات شخصی شما";
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}
<html>
<head>
    <style>
    body{
    font-family:IRANYekan,sans-serif;
    }
    h4{
    text-align:right;
    }
    </style>
    
</head>
<body>

    <h4>@ViewData["Title"]</h4>

    <div class="row">
        <div class="col-md-6" style=" text-align: right;">
            <p class="text-info">حساب کاربری شما شامل برخی از اطلاعات شخصی شماست که در سایت وارد کرده اید.میتوانید این اطلاعات را حذف یا دانلود کنید</p>
            <p>
                <strong class="text-warning">حذف این اطلاعات باعث حذف حساب کاربری شما می شود و این حساب قابل برگشت نیست</strong>
            </p>
            <form id="download-data" asp-page="DownloadPersonalData" method="post" class="form-group">
                <button class="btn btn-outline-success" type="submit">دانلود</button>
            </form>
            <p>
                <a style="float:left;text-align:left;margin-top:-52px;margin-left:37%;" id="delete" asp-page="DeletePersonalData" class="btn btn-outline-danger">حذف</a>
            </p>
        </div>
    </div>

    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
</body>
</html>

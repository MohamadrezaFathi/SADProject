@page
@model RegisterModel
@{
    ViewData["Title"] = "ثبت نام کاربر جدید";
}

<html>
<head>
    <style>
         #loginpanel2{
            
          width:35%;
            height:500px;
            margin-left:30%;
            background-color:lavender;

        }
        .row {
            text-align: center;
            font-family: IRANYekan,sans-serif;
        }
        h4{
            font-family:IRANYekan,sans-serif;
            text-align:center;
            padding-top:13px;
            padding-bottom:13px;
        }
        #ppp2{
            border-bottom:2px solid white;
           
        }
    </style>
</head>
<body>
    <div class="container row" id="loginpanel2" dir="rtl">
    <div class="col-md-12" style="float:right;text-align:right;" >
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h4>ایجاد حساب کاربری جدید</h4>
            
            <p id="ppp2"></p>
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.Email">ایمیل</label>
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Password">رمزعبور</label>
                <input asp-for="Input.Password" class="form-control" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.ConfirmPassword">تکرار رمز عبور</label>
                <input asp-for="Input.ConfirmPassword" class="form-control" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="form-group" style="margin-right:38%;">
                <button type="submit" class="btn btn-primary" style="background-color:rgb(35, 102, 214);">ثبت نام</button>
            </div>
        </form>
    </div>
    </div>

    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }

</body>
</html>

